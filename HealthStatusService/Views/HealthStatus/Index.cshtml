@{
    ViewBag.Title = "Health Status";
}

<h2 class="text-center my-4">Health Status</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card shadow-lg">
                <div class="card-body">
                    <canvas id="redditChart"></canvas>
                </div>
                <div class="card-footer bg-transparent text-center">
                    Reddit Service
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card shadow-lg">
                <div class="card-body">
                    <canvas id="notificationChart"></canvas>
                </div>
                <div class="card-footer bg-transparent text-center">
                    Notification Service
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include Bootstrap JS and Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var ctxReddit = document.getElementById('redditChart').getContext('2d');
    var redditChart = new Chart(ctxReddit, {
        type: 'doughnut',
        data: {
            labels: ['OK', 'NOT OK'],
            datasets: [{
                label: 'Reddit Service',
                data: [@ViewBag.RedditOkCount, @ViewBag.RedditNotOkCount],
                backgroundColor: [
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)'
                ],
                borderColor: [
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                tooltip: {
                    enabled: true,
                }
            },
            cutout: '70%'
        }
    });

    var ctxNotification = document.getElementById('notificationChart').getContext('2d');
    var notificationChart = new Chart(ctxNotification, {
        type: 'doughnut',
        data: {
            labels: ['OK', 'NOT OK'],
            datasets: [{
                label: 'Notification Service',
                data: [@ViewBag.NotificationOkCount, @ViewBag.NotificationNotOkCount],
                backgroundColor: [
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                tooltip: {
                    enabled: true,
                }
            },
            cutout: '70%'
        }
    });
</script>